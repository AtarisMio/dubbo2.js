{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest --watch -u",
    "debug": "node $NODE_DEBUG_OPTION -r ts-node/register packages/interpret-cli/src/cli.ts -c dubbo.json"
  },
  "devDependencies": {
    "@types/dateformat": "1.0.1",
    "@types/debug": "^0.0.30",
    "@types/ip": "0.0.30",
    "@types/jest": "^21.1.6",
    "@types/js-to-java": "2.4.0",
    "@types/koa-compose": "3.2.2",
    "@types/node": "^8.0.51",
    "@types/node-zookeeper-client": "^0.2.6",
    "@types/uuid": "3.4.3",
    "jest": "^21.2.1",
    "lerna": "^2.5.1",
    "ts-jest": "^21.2.2",
    "typescript": "2.9.2",
    "uuid": "3.2.1",
    "ts-node": "7.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/packages/dubbo/src/__tests__/providers",
      "<rootDir>/examples",
      "<rootDir>/java"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
